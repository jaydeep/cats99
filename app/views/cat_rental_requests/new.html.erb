<h1>Rental Request form</h1>
	<form action="<%= cat_rental_requests_url %>" method="post">
	<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

		<label for="cat">Cat</label>
	<select name="cat_rental_request[cat_id]">
		<option value=""></option>
		<% Cat.all.each do |cat|%>
			<option value="<%= cat.id %>" ><%= cat.name %> </option>
		<% end%>
	</select><br>

	<label for="start_date">Start date</label>
	<input type="text" name="cat_rental_request[start_date]" value="<%= @cat_rental_request.start_date %>"><br>

	<label for="end_date">End date</label>
	<input type="text" name="cat_rental_request[end_date]" value="<%= @cat_rental_request.end_date %>"><br>

	<input type="submit" value="Make rental request">

</form>