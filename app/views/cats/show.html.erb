<p>Cat's Vital Statistics</p>
<table>
	<tr>
		<td>Name</td>
		<td><%= @cat.name%></td>
	</tr>
	<tr>
		<td>Sex</td>
		<td><%= @cat.sex%></td>
	</tr>
	<tr>
		<td>Color</td>
		<td><%= @cat.color%></td>
	</tr>
	<tr>
		<td>Age</td>
		<td><%= @cat.age %></td>
	</tr>
	<tr>
		<td>Date of Birth</td>
		<td><%= @cat.birth_date %></td>
	</tr>
	<tr>
		<td>Owner</td>
		<td><%= @cat.user_id %></td>
	</tr>
</table>

<%= button_to "Edit cat", edit_cat_url(@cat), :method => :get %>

<p>Cat's Requests</p>
<table>
	<tr>
		<th>Start date</th>
		<th>End date</th>
		<th>Status</th>
		<th>Approve</th>
		<th>Deny</th>
	</tr>
	<% @requests.each do |request| %>
	<tr>
	  <td><%= request.start_date%></td>
	  <td><%= request.end_date%></td>
		<td><%= request.status%></td>
		<%if request.pending? && @owned %>
		<td><%= button_to "Approve", cat_rental_request_approve_url(request.id), :method => :post %></td>
		<td><%= button_to "Deny", cat_rental_request_deny_url(request.id), :method => :post %></td>
		<%end%>
  </tr>
	<% end %>
</table>