<!DOCTYPE html>
<html>
<head>
  <title>Cats99</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<% if !current_user.nil? %>
	  <ul>
	    <li>Logged in as: <%= current_user.username %></li>
	    <li><%= button_to "Logout", session_url, :method => :delete %></li>
	  </ul>
	<% else %>
		<%= link_to "Please log in. :)", new_session_url %>
		<%= button_to "Create Account.", new_user_url, :method => :get%>
	<% end %>

<%= yield %>

</body>
</html>
